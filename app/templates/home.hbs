<!-- 模块-固定在顶部 -->
{{top-fixed-nav showbill=true}}

<!-- 模块-扫一扫 -->
<div class="container black_theme" id="home_fast_funcs">
	<ul class="row">
		{{#each model.fastFuncs as |fastFunc|}}
			{{#link-to fastFunc.route }}
			<li class="col-xs-3">
				<i class="iconfont {{fastFunc.icon}}"></i>
				<br/>{{fastFunc.name}}
			</li>
			{{/link-to}}
		{{/each}}
	</ul>
</div>

